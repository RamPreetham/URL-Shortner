<body>
    <div class="container">
    <h1 class="d-flex justify-content-center">URL-Shortner</h1>
    <form action="" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only"></label>
        <input placeholder="Url" type="url" name="fullUrl" 
        id="fullUrl" class="form-control col my-2 mr-2">
        <button class="btn btn-success" type="submit">Shrink</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>No_of_clicks</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="www.facebook.com">www.facebook.com</a></td>
                <td><a href="/fb">fb</a></td>
                <td>20</td>                
            </tr>
            <tr>
                <td><a href="www.youtube.com">www.youtube.com</a></td>
                <td><a href="/yt">yt</a></td>
                <td>10</td>                 
            </tr>
            <tr>
                <td><a href="www.youtube.com">www.youtube.com</a></td>
                <td><a href="/yt">yt</a></td>
                <td>10</td>  
            </tr>
        </tbody>
    </table>
    </div>
</body>
